  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    // output directory for es6 files
    "outDir": "lib",
    // it will generate declaration and js files in lib folder
    "declaration": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./module"
  ]
}
